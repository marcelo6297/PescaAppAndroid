<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="py.com.marcelo.pescaapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PescadoListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PescadoDetailActivity"
            android:label="@string/title_pescado_detail"
            android:parentActivityName=".PescadoListActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AddPescadoActivity"
            android:label="@string/title_activity_add_pescado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DatabaseActivity"
            android:label="@string/title_database"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>
